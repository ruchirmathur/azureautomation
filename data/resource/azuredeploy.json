{
    "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "servername": {
            "defaultValue": "mysqlserver534343",
            "type": "String"
        },
        "virtualNetworks_appvnet_externalid": {
            "defaultValue": "/subscriptions/subscriptionId/resourceGroups/NetworkResourceGroup/providers/Microsoft.Network/virtualNetworks/appvnet",
            "type": "String"
        },
        "virtualNetworks_privatezone_externalid": {
            "defaultValue": "/subscriptions/subscriptionId/resourceGroups/NetworkResourceGroup/providers/Microsoft.Network/privateDnsZones/mysqlserver534343.private.mysql.database.azure.com",
            "type": "String"
        }
    },
    "variables": {},
    "resources": [
        {
            "type": "Microsoft.DBforMySQL/flexibleServers",
            "apiVersion": "2021-12-01-preview",
            "name": "[parameters('servername')]",
            "location": "East US",
            "sku": {
                "name": "Standard_B1ms",
                "tier": "Burstable"
            },
            "properties": {
                "administratorLogin": "tobechanged",
                "administratorPassword": "tobechanged",
                "storage": {
                    "storageSizeGB": 20,
                    "iops": 360,
                    "autoGrow": "Enabled",
                    "autoIoScaling": "Disabled"
                },
                "version": "5.7",
                "availabilityZone": "2",
                "maintenanceWindow": {
                    "customWindow": "Disabled",
                    "dayOfWeek": 0,
                    "startHour": 0,
                    "startMinute": 0
                },
                "replicationRole": "None",
                "network": {
                    "delegatedSubnetResourceId": "[concat(parameters('virtualNetworks_appvnet_externalid'), '/subnets/Subnet1')]",
                    "privateDnsZoneResourceId": "[parameters('virtualNetworks_privatezone_externalid')]"
                },
                "backup": {
                    "backupRetentionDays": 7,
                    "geoRedundantBackup": "Disabled"
                },
                "highAvailability": {
                    "mode": "Disabled"
                }
            }
        },
        {
            "type": "Microsoft.DBforMySQL/flexibleServers/databases",
            "apiVersion": "2021-12-01-preview",
            "name": "[concat(parameters('servername'), '/information_schema')]",
            "dependsOn": [
                "[resourceId('Microsoft.DBforMySQL/flexibleServers', parameters('servername'))]"
            ],
            "properties": {
                "charset": "utf8",
                "collation": "utf8_general_ci"
            }
        },
        {
            "type": "Microsoft.DBforMySQL/flexibleServers/databases",
            "apiVersion": "2021-12-01-preview",
            "name": "[concat(parameters('servername'), '/mysql')]",
            "dependsOn": [
                "[resourceId('Microsoft.DBforMySQL/flexibleServers', parameters('servername'))]"
            ],
            "properties": {
                "charset": "latin1",
                "collation": "latin1_swedish_ci"
            }
        },
        {
            "type": "Microsoft.DBforMySQL/flexibleServers/databases",
            "apiVersion": "2021-12-01-preview",
            "name": "[concat(parameters('servername'), '/performance_schema')]",
            "dependsOn": [
                "[resourceId('Microsoft.DBforMySQL/flexibleServers', parameters('servername'))]"
            ],
            "properties": {
                "charset": "utf8",
                "collation": "utf8_general_ci"
            }
        },
        {
            "type": "Microsoft.DBforMySQL/flexibleServers/databases",
            "apiVersion": "2021-12-01-preview",
            "name": "[concat(parameters('servername'), '/sys')]",
            "dependsOn": [
                "[resourceId('Microsoft.DBforMySQL/flexibleServers', parameters('servername'))]"
            ],
            "properties": {
                "charset": "utf8",
                "collation": "utf8_general_ci"
            }
        }
    ]
}
